<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色设置为灰色 -->
<!--    <solid android:color="@android:color/darker_gray"/>-->

    <!-- 描边颜色设置为黑色，宽度为 1dp -->
    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray"/>

    <!-- 设置圆角半径，这里设置为 20dp，调整为椭圆效果 -->
    <corners android:radius="20dp"/>

    <!-- 内边距 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>
</shape>
